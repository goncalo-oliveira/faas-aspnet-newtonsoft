<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net5.0</TargetFramework>
    <RootNamespace>OpenFaaS</RootNamespace>
    <AssemblyName>OpenFaaS.Functions.Newtonsoft</AssemblyName>
    <PackageId>OpenFaaS.Functions.Newtonsoft</PackageId>
    <Version>1.5</Version>
    <Authors>Goncalo Oliveira</Authors>
    <Description>Newtonsoft Json formatters for OpenFaaS ASPNET Functions</Description>
    <RepositoryUrl>https://github.com/goncalo-oliveira/faas-aspnet-newtonsoft</RepositoryUrl>
    <PackageLicenseExpression>Apache-2.0</PackageLicenseExpression>
    <PackageIcon>faactory.png</PackageIcon>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.AspNetCore.Mvc.NewtonsoftJson" Version="5.0.8" />
    <PackageReference Include="OpenFaaS.Functions" Version="1.5.0" />
  </ItemGroup>

  <ItemGroup>
    <None Include="../faactory.png" Pack="true" PackagePath="/" />
  </ItemGroup>

</Project>
